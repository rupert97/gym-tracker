<div class="bg-white rounded-xl shadow-md p-4">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900">Cardio</h2>
        <label class="flex items-center">
            <input type="checkbox" id="cardio-toggle" class="sr-only">
            <div class="relative">
                <div class="block bg-gray-300 w-14 h-8 rounded-full"></div>
                <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
            </div>
        </label>
    </div>

    <div id="cardio-content" class="hidden space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Cardio type</label>
            <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="">Select type</option>
                <option value="cinta">Treadmill</option>
                <option value="bicicleta">Stationary bike</option>
                <option value="eliptica">Elliptical</option>
                <option value="escaladora">Stair climber</option>
                <option value="remo">Rowing machine</option>
                <option value="otro">Other</option>
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Duration (minutes)</label>
            <input
                    type="number"
                    placeholder="30"
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Intensity</label>
            <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="">Select intensity</option>
                <option value="low">Low (60–70% max HR)</option>
                <option value="medium">Medium (70–80% max HR)</option>
                <option value="high">High (80–90% max HR)</option>
            </select>
        </div>
    </div>
</div>

<script>
    const toggle = document.getElementById('cardio-toggle');
    const content = document.getElementById('cardio-content');
    const dot = document.querySelector('#cardio-content').previousElementSibling.querySelector('.dot');

    toggle?.addEventListener('change', (e) => {
        const isChecked = (e.target as HTMLInputElement).checked;

        if (isChecked) {
            content?.classList.remove('hidden');
            dot?.classList.add('translate-x-6', 'bg-green-600');
            dot?.parentElement?.classList.add('bg-green-600');
            dot?.parentElement?.classList.remove('bg-gray-300');
        } else {
            content?.classList.add('hidden');
            dot?.classList.remove('translate-x-6', 'bg-green-600');
            dot?.parentElement?.classList.remove('bg-green-600');
            dot?.parentElement?.classList.add('bg-gray-300');
        }
    });
</script>
