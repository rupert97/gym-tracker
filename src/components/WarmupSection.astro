<div class="bg-white rounded-xl shadow-md p-4">
    <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-semibold text-gray-900">Warmup</h2>
        <label class="flex items-center">
            <input type="checkbox" id="warmup-toggle" class="sr-only">
            <div class="relative">
                <div class="block bg-gray-300 w-14 h-8 rounded-full"></div>
                <div class="dot absolute left-1 top-1 bg-white w-6 h-6 rounded-full transition"></div>
            </div>
        </label>
    </div>

    <div id="warmup-content" class="hidden space-y-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Exercise</label>
            <input
                    type="text"
                    placeholder="e.g., Treadmill walk"
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Intensity</label>
            <select class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <option value="">Select intensity</option>
                <option value="baja">Low</option>
                <option value="media">Medium</option>
                <option value="alta">High</option>
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Duraci√≥n (minutos)</label>
            <input
                    type="number"
                    placeholder="10"
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
        </div>
    </div>
</div>

<script>
    const toggle = document.getElementById('warmup-toggle');
    const content = document.getElementById('warmup-content');
    const dot = document.querySelector('.dot');

    toggle?.addEventListener('change', (e) => {
        const isChecked = (e.target as HTMLInputElement).checked;

        if (isChecked) {
            content?.classList.remove('hidden');
            dot?.classList.add('translate-x-6', 'bg-blue-600');
            dot?.parentElement?.classList.add('bg-blue-600');
            dot?.parentElement?.classList.remove('bg-gray-300');
        } else {
            content?.classList.add('hidden');
            dot?.classList.remove('translate-x-6', 'bg-blue-600');
            dot?.parentElement?.classList.remove('bg-blue-600');
            dot?.parentElement?.classList.add('bg-gray-300');
        }
    });
</script>
